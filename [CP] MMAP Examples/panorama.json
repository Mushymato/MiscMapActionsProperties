{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    {
      "Action": "Load",
      "Target": "Maps/{{ModId}}/panorama_test, Maps/{{ModId}}/panorama_tall, Maps/{{ModId}}/panorama_small",
      "FromFile": "assets/{{TargetWithoutPath}}.tmx"
    },
    {
      "Action": "EditData",
      "Target": "Data/Locations",
      "Entries": {
        "{{ModId}}_PanoramaTest": {
          "DisplayName": "panorama_test",
          "DefaultArrivalTile": {
            "X": 10,
            "Y": 29
          },
          "CreateOnLoad": {
            "MapPath": "Maps/{{ModId}}/panorama_test",
            "Type": null,
            "AlwaysActive": false
          },
          "CustomFields": {
            // this is a built-in panorama, see MiscMapActionsProperties/assets/panorama.json
            "mushymato.MMAP_Panorama": "MMAP_MountainView",
            // "mushymato.MMAP_Panorama": "{{ModId}}_Bonch"
            // MMAP_MountainView has time of day backing, control time of day for this location like so
            "mushymato.MMAP_NightTimeStarting": "1100", // default 1800 spring summer island, 1700 fall, 1500 winter
            // "mushymato.MMAP_NightTimeModerate": "1200", // by not setting the moderate time, it will simply be half way between starting and truly times
            "mushymato.MMAP_NightTimeTruly": "1500" // default starting + 200
          }
        },
        "{{ModId}}_PanoramaTall": {
          "DisplayName": "panorama_tall",
          "DefaultArrivalTile": {
            "X": 10,
            "Y": 99
          },
          "CreateOnLoad": {
            "MapPath": "Maps/{{ModId}}/panorama_tall",
            "Type": null,
            "AlwaysActive": false
          },
          "CustomFields": {
            "mushymato.MMAP_Panorama": "MMAP_IslandHorizon",
          }
        },
        "{{ModId}}_PanoramaSmall": {
          "DisplayName": "panorama_small",
          "DefaultArrivalTile": {
            "X": 2,
            "Y": 10
          },
          "CreateOnLoad": {
            "MapPath": "Maps/{{ModId}}/panorama_small",
            "Type": null,
            "AlwaysActive": false
          },
          "CustomFields": {
            "mushymato.MMAP_Panorama": "{{ModId}}_BoxedIslandHorizon",
          }
        }
      }
    },
    // a panorama that bonches you
    {
      "Action": "EditData",
      "Target": "mushymato.MMAP/Panorama",
      "Entries": {
        "{{ModId}}_Bonch": {
          "ParallaxLayers": [
            {
              "Texture": "Portraits/Bouncer",
              "Color": "Red",
              "RepeatX": true,
              "Repeaty": true,
              "Velocity": "0.1,0.1"
            },
            {
              "Texture": "Portraits/Bouncer",
              "Color": "Blue",
              "RepeatX": true,
              "Repeaty": true,
              "Velocity": "-0.1,0.2"
            }
          ],
        },
        "{{ModId}}_BonchMountain": {
          "BasedOn": "MMAP_MountainView",
          "ParallaxLayers": [
            {
              "Texture": "Portraits/Bouncer",
              "Color": "Red",
              "RepeatX": true,
              "Repeaty": true,
              "Velocity": "0.1,0.1"
            },
            {
              "Texture": "Portraits/Bouncer",
              "Color": "Blue",
              "RepeatX": true,
              "Repeaty": true,
              "Velocity": "-0.1,0.2"
            }
          ],
        },
        "{{ModId}}_BoxedIslandHorizon": {
          "BasedOn": "MMAP_IslandHorizon",
          "FullView": false
        }
      }
    },
  ]
}
