{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    // Basic add new custom floor
    {
      "Action": "Load",
      "Target": "{{ModId}}/floor",
      "FromFile": "assets/floor.png"
    },
    {
      "Action": "EditData",
      "Target": "Data/Objects",
      "Entries": {
        "{{ModId}}_FloorItem": {
          "Name": "Glowing Floor",
          "DisplayName": "Glowing Floor",
          "Description": "Glowing Floor Example",
          "Type": "Crafting",
          "Category": -24,
          "Price": 1,
          "Texture": "{{ModId}}/floor",
          "SpriteIndex": 0
        },
      }
    },
    {
      "Action": "EditData",
      "Target": "Data/FloorsAndPaths",
      "Entries": {
        "{{ModId}}_FloorTerrain": {
          "Id": "{{ModId}}_FloorTerrain",
          "ItemId": "{{ModId}}_FloorItem",
          "Texture": "{{ModId}}/floor",
          "Corner": {
            "X": 0,
            "Y": 0
          },
          "WinterTexture": "{{ModId}}/floor",
          "WinterCorner": {
            "X": 64,
            "Y": 0
          },
          "PlacementSound": "axchop",
          "RemovalSound": null,
          "RemovalDebrisType": 12,
          "FootstepSound": "woodyStep",
          "ConnectType": "Default",
          "ShadowType": "Square",
          "CornerSize": 4,
          "FarmSpeedBuff": -1.0
        },
      }
    },
    // floor path properties
    {
      "Action": "EditData",
      "Target": "mushymato.MMAP/FloorPathProperties",
      "Entries": {
        // unqualified Data/FloorsAndPaths Id
        "{{ModId}}_FloorTerrain": {
          // Layer
          "Back": {
            // property: value
            "mushymato.MMAP_Light": "1 White 4",
            "mushymato.MMAP_LightCond": "mushymato.MMAP_TIME_IS_LIGHTS_OFF"
          },
          "Buildings": {
            "Action": "Message Test"
          }
        }
      }
    }
  ]
}